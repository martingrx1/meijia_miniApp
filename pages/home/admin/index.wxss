/* miniprogram/pages/home/admin/index.wxss */
.page {
  padding: 0 6px;
}

.card {
  padding: 10px;
  margin-bottom: 10px;
  background-color: #fff;
}

.card-header{
  display: flex;
  justify-content: space-between;
  line-height: 40px;
}
.userInfo {
  display: flex;
}

.userInfo .avatar {
  width: 40px;
  height: 40px;
}

.userInfo .nickName {
  color: pink;
  font-size:14px;
  width:5em;
  white-space: nowrap;
    text-overflow: ellipsis;
  
  overflow: hidden;

  
  margin-left: 10px;
}

.userInfo .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.header-right .date{
  margin-right: 5px;
  font-size: 14px;
  color: gainsboro;
}

.card-content
.title{
  margin-top: 10px;
}
.card-content .content{
  position: relative;
  display: flex;
  justify-content: space-between;
  height: 60px;
  line-height: 60px;
}
.image-area{
  display: flex;
  margin-top: 10px;
}
.prod-img{
  width: 60px;
  height: 100%;
  margin-right: 5px;
}
.price{
  position: absolute;
  right: 25px;
  font-size: 25px;
  text-align: left;
  font-weight: bold;

}